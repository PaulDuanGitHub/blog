@import "variables.styl"
@import "mixins.styl"

html
  scroll-behavior smooth

body
  @extend .sans-serif
  font-size 20px
  color gray-dark
p
  line-height 1.5
  margin 30px 0

p, li
  a
    text-decoration underline

h1, h2, h3, h4, h5, h6
  @extend .sans-serif
  font-weight 750

a
  color gray-dark
  &:hover, &:focus
    color brand-primary
a img
  &:hover, &:focus
    cursor zoom-in

hr.small
  max-width 100px
  margin 15px auto
  border-width 4px
  border-color white

.fa-stack-1x, .fa-stack-2x
  bottom 0

.navbar-custom
  position absolute
  top 0
  left 0
  width 100%
  z-index 3
  @extend .sans-serif
  &.is-post
    a
      color gray-dark !important
      &:hover, &:focus
        color brand-primary !important
  hr
    display none
  .navbar-brand
    font-weight 800
  .nav
    li
      a
        text-transform uppercase
        font-size 12px
        font-weight 800
        letter-spacing 1px
        text-decoration none
  @media only screen and (min-width: 768px)
    &.is-post
    hr
      display block
      margin-top 0px !important
    background transparent
    border-bottom 1px solid transparent
    .navbar-brand
      color white
      padding 20px
      &:hover, &:focus
        color white-faded
    .nav
      li
        a
          color white
          padding 20px
          &:hover, &:focus
            color white-faded
  @media only screen and (min-width: 1170px)
    -webkit-transition background-color 0.3s
    -moz-transition background-color 0.3s
    transition background-color 0.3s
    /* Force Hardware Acceleration in WebKit */
    -webkit-transform translate3d(0, 0, 0)
    -moz-transform translate3d(0, 0, 0)
    -ms-transform translate3d(0, 0, 0)
    -o-transform translate3d(0, 0, 0)
    transform translate3d(0, 0, 0)
    -webkit-backface-visibility hidden
    backface-visibility hidden
    &.is-fixed
      /* when the user scrolls down, we hide the header right above the viewport */
      position fixed
      top -61px
      background-color rgba(255, 255, 255, 0.9)
      border-bottom 1px solid darken(rgb(255, 255, 255, 1), 5%)
      -webkit-transition -webkit-transform 0.3s
      -moz-transition -moz-transform 0.3s
      transition transform 0.3s
      .navbar-brand
        color gray-dark
        &:hover, &:focus
          color brand-primary
      .nav
        li
          a
            color gray-dark
            &:hover, &:focus
              color brand-primary
    &.is-visible
      /* if the user changes the scrolling direction, we show the header */
      -webkit-transform translate3d(0, 100%, 0)
      -moz-transform translate3d(0, 100%, 0)
      -ms-transform translate3d(0, 100%, 0)
      -o-transform translate3d(0, 100%, 0)
      transform translate3d(0, 100%, 0)

.intro-header
  background-color gray
  background-position center center
  background-attachment scroll
  @extend .background-cover
  margin-bottom 50px
  &.is-post
    margin-bottom 24px
    background none
    h1, h2
      color gray-dark
    .meta
      color gray
    .site-heading, .post-heading, .page-heading
      padding 45px  0 0 0
      color white
      @media only screen and (min-width: 768px)
        padding 60px 0 0 0
  .site-heading, .post-heading, .page-heading
    padding 100px 0 50px
    color white
    @media only screen and (min-width: 768px)
      padding 150px 0
    &.archives
      color brand-primary
      margin-top 60px
  .site-heading, .page-heading
    text-align center
    h1
      margin-top 0
      font-size 50px
    .subheading
      font-size 24px
      line-height 1.1
      display block
      @extend .sans-serif
      font-weight 300
      margin 10px 0 0
    @media only screen and (min-width: 768px)
      h1
        font-size 80px
  .post-heading
    h1
      font-size 35px
      margin 0 0 10px 0
    h2
      margin 0 0 10px 0
    .subheading, .meta
      line-height 1.1
      display block
    .subheading
      @extend .sans-serif
      font-size 24px
      margin 10px 0 30px
      font-weight 600
    .meta
      @extend .sans-serif
      font-style italic
      font-weight 300
      font-size 17px
      a
        color white
    @media only screen and (min-width: 768px)
      h1
        font-size 55px
      .subheading
        font-size 30px

.post-preview
  .category-link
    margin-top 10px
  .post-title
    font-size 30px
    margin-top 0
    margin-bottom 10px
    &.archive
      margin-top 30px
      font-size 22px
  .post-subtitle
      margin 0
      font-weight 300
      margin-bottom 10px
  a
    color gray-dark
    &:hover, &:focus
      text-decoration none
      color brand-primary
  .post-excerpt
    color #a3a3a3
    font-style italic
    font-size 15px
    margin-top 10px
    margin-bottom 10px
    &:hover, &:focus
      text-decoration none
      color brand-primary
  > .post-meta
    color gray
    font-size 17px
    font-style italic
    margin-top 0px
    margin-bottom 0px
    &.archive
      font-size 16px
    > a
      text-decoration none
      color gray-dark
      &:hover, &:focus
        color brand-primary
        text-decoration underline
  @media only screen and (min-width: 768px)
    .post-title
      font-size 32px

.section-heading
  font-size 36px
  margin-top 60px
  font-weight 700

.caption
  text-align center
  font-size 14px
  padding 10px
  font-style italic
  margin 0
  display block
  border-bottom-right-radius 5px
  border-bottom-left-radius 5px

.post-tags, .post-categories
  margin-top 20px
  width fit-content

.archive-before-pagination
  height 30px
footer
  padding 50px 0 65px
  .list-inline
    margin 0
    padding 0
  .copyright
    font-size 14px
    text-align center
    margin-bottom 0

.floating-label-form-group
  font-size 14px
  position relative
  margin-bottom 0
  padding-bottom 0.5em
  border-bottom 1px solid gray-light
  input, textarea
    z-index 1
    position relative
    padding-right 0
    padding-left 0
    border none
    border-radius 0
    font-size 1.5em
    background none
    box-shadow none !important
    resize none
  label
    display block
    z-index 0
    position relative
    top 2em
    margin 0
    font-size 0.85em
    line-height 1.764705882em
    vertical-align middle
    vertical-align baseline
    opacity 0
    -webkit-transition top 0.3s ease,opacity 0.3s ease
    -moz-transition top 0.3s ease,opacity 0.3s ease
    -ms-transition top 0.3s ease,opacity 0.3s ease
    transition top 0.3s ease,opacity 0.3s ease
  &::not(:first-child)
    padding-left 14px
    border-left 1px solid gray-light

.floating-label-form-group-with-value
  label
    top 0
    opacity 1

.floating-label-form-group-with-focus
  label
    color brand-primary

form .row:first-child .floating-label-form-group
  border-top 1px solid gray-light

.btn
  @extend .sans-serif
  text-transform uppercase
  font-size 14px
  font-weight 800
  letter-spacing 1px
  border-radius 0
  padding 15px 25px

.btn-lg
  font-size 16px
  padding 25px 35px

.btn-default
  &:hover, &:focus
    background-color brand-primary
    border 1px solid brand-primary
    color white

.pager
  margin 20px 0 0
  li
    > a, > span
      @extend .sans-serif
      text-transform uppercase
      font-size 14px
      font-weight 800
      letter-spacing 1px
      padding 15px 25px
      background-color white
      border-radius 0
    > a:hover, > a:focus
      color white
      background-color brand-primary
      border 1px solid brand-primary
  .disabled
    > a, > a:hover, > a:focus, > span
      color gray
      background-color gray-dark
      cursor not-allowed

::-moz-selection
  color white
  text-shadow none
  background brand-primary

::selection
  color white
  text-shadow none
  background brand-primary

img::selection
  color white
  background transparent

img::-moz-selection
  color white
  background transparent

.post-sidebar 
  position sticky
  top 80px
  scroll-behavior smooth
  margin-top 30px
  max-height 80vh
  overflow-y auto
.sidebar-heading
  position sticky
  top 0
  display flex
  background white
  z-index 1
  button
    font-size 16px
    font-weight normal
    padding 2px 5px
    background none
    &.mobile
      font-size 17px

.post-toc 
  font-size 14px
  @extend .sans-serif
  overflow-x hidden
  &.mobile
    font-size 17px
  .toc
    padding 0px 10px
    ol
      padding-left 20px
    li
      list-style-type none
  a
    color #666
    text-decoration none
    position relative
    display block
    &.active
      color brand-primary
      &:before
        content ""
        position absolute
        top 0
        bottom 0
        right -10px
        width 1000px
        background-color #f2f2f2
        z-index -1
        border-right 3px solid brand-primary

h1, h2, h3
  scroll-margin-top 20px

.tag-pill
  display inline-block
  text-transform capitalize
  padding 4px 8px
  font-size 14px
  border 1px solid gray-dark
  border-radius 20px
  margin-right 5px
  margin-bottom 10px
  @extend .sans-serif
  &:hover, &:visited, &:active
    text-decoration none
    border 1px solid brand-primary
  &.tag-active
    color white
    border 1px solid brand-primary
    background-color brand-primary
    text-decoration none

.category-link
  display inline-block
  font-size 16px
  @extend .sans-serif
  padding 2px 10px
  text-transform capitalize
  background rgb(242, 242, 242)
  &:hover, &:focus
    text-decoration underline !important
  &.category-archive
    font-size 14px
    border-left none !important

  /* all categories */
  &.category-all.category-active
    background-color rgba(0, 133, 161, 0.08)
    color brand-primary
    border-left 3px solid brand-primary
    &.category-archive
      border-bottom 3px solid brand-primary

  /* sketches */
  &.category-sketches.category-active
    background-color rgba(0, 133, 161, 0.08)
    color brand-primary
    border-left 3px solid brand-primary
    &.category-archive
      border-bottom 3px solid brand-primary

  /* notes */
  &.category-notes.category-active
    background-color rgba(108, 92, 231, 0.08)
    color category-notes
    border-left 3px solid category-notes
    &.category-archive
      border-bottom 3px solid category-notes

  /* build logs */
  &.category-build-logs.category-active
    background-color rgba(225, 112, 85, 0.08)
    color category-build-logs
    border-left 3px solid category-build-logs
    &.category-archive
      border-bottom 3px solid category-build-logs


.archive-categories
  margin-top 10px
  font-size 16px
  div
    margin-bottom 5px

.archive-tags
  font-size 16px
  div
    margin-bottom 5px

body
  webkit-tap-highlight-color brand-primary
